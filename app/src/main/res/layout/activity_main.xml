<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:keepScreenOn="true">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:clickable="true" app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/playStop"
            android:layout_marginBottom="36dp" app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@android:color/white" android:scaleType="fitCenter"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timerText" tools:text="3:00" android:textSize="150sp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginBottom="160dp"
            app:layout_constraintBottom_toTopOf="@+id/playStop" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>